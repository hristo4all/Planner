<html>
  <head>
    {{
      >partial/_header
    }}
    <style>
      .grid-container {
        display: grid;
        grid-template-columns: auto auto auto auto auto auto auto;
        grid-gap: 10px;
        background-color: #2196f3;
        padding: 10px;
      }

      .grid-item {
        background-color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.8);
        padding: 20px;
        font-size: 30px;
        text-align: center;
      }
      .grid-item1 {
        background-color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.8);
        padding: 20px;
        font-size: 30px;
        text-align: center;
        align-content: center;
      }
      p {
        font-size: 20px;
      }
      .plannerBody {
        font-size: 20px;
      }
    </style>
  </head>

  <body>
    {{>partial/_navbar}}
    <h1>
     {{ title }} 
    </h1>
    <hr />
    <h2>Today is {{ today }}</h2>
    <div class="grid-container">
      {{#days}}
      <div class="grid-item">
        <div id="day" value="{{ name }}">{{ date }} {{ name }}</div>
        <hr />
        <p><b>Goal: </b>{{ goal }}</p>
        <div class="form-group">
        </div>
        <hr />
        <p class="plannerBody"><b>Achievement:</b>  {{achievement}}</p>
      </div>
      {{/days}}
      {{^days}}
  <h2 style="color:white;">You have no completed achievements</h2>
{{/days}}
    </div>
    <hr/>
  </body>
  
  {{
    >partial/_footer
  }}
</html>
