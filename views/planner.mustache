<html>
  <head>
    {{
      >header
    }}
    <style>
      .grid-container {
        display: grid;
        grid-template-columns: auto auto auto auto auto auto auto auto;
        grid-gap: 10px;
        background-color: #2196f3;
        padding: 10px;
      }

      .grid-item {
        background-color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.8);
        padding: 20px;
        font-size: 30px;
        text-align: center;
      }
      .grid-item1 {
        background-color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.8);
        padding: 20px;
        font-size: 30px;
        text-align: center;
        align-content: center;
      }
      p {
        font-size: 20px;
      }
      .plannerBody {
        font-size: 20px;
      }
    </style>
  </head>

  <body>
    {{>_navbar}}
    <h1>{{ title }}</h1>

    <br />
    {{#weeks}}
    <div class="grid-container">
      <div class="grid-item1">Week {{ weeks.0.weekNo }}</div>
      {{#weeks.0.days}}
      <div class="grid-item">
        <div>{{ day }}</div>
        <hr />
        <p><b>Goal: </b>{{ exercise }}</p>
        <div class="form-group">
          <input
            type="submit"
            value="Set Goal"
            disabled
            class="btn btn-primary"
          />
        </div>
        <hr />
        <a class="plannerBody">Achievement: {{ actualAchievement }}</a>
        <div class="form-group">
          <input
            type="submit"
            value="Set Result"
            disabled
            class="btn btn-primary"
          />
        </div>
      </div>
      {{/weeks.0.days}}
    </div>
    {{/weeks}}
  </body>
</html>
