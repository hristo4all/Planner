<html>
  <head>
    {{>partial/_header}}
  </head>
  {{>partial/_navbar}}
  <body class="container">
    <h2>{{ title }}</h2>
    {{#day}}
    <form method="post" role="form">
      <div class="form-group">
        <label for="achievement">Set Achievement for {{name}}</label>
        <input
          type="text"
          class="form-control"
          id="achievement"
          name="achievement"
          value="{{achievement}}"
          placeholder="Enter your achievement"
          required
        />
      </div>
      <div class="form-group">
        <label for="ID">ID </label>
        <input
          type="text"
          class="form-control"
          id="id"
          name="id"
          value="{{dayId}}"
          disabled
          required
        />
      </div>
      <div class="form-group">
        <input
          type="submit"
          value="Set Achievement"
          class="btn btn-primary"
        />
      </div>
    </form>
    {{/day}}
  </body>
  {{
    >partial/_footer
  }}
</html>
