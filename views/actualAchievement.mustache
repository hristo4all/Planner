<html>
  <head>
    {{>header}}
  </head>
  <body class="container">
    <h2>{{ title }}</h2>
    <form method="post" role="form">
      <div class="form-group">
        <label for="author">Actual Achievement</label>
        <input
          type="text"
          class="form-control"
          id="actualAchievement"
          name="actualAchievement"
          placeholder="Enter your achievement"
          required
        />
      </div>
      <div class="form-group">
        <input
          type="submit"
          value="Post entry"
          disabled
          class="btn btn-primary"
        />
      </div>
    </form>
  </body>
</html>
